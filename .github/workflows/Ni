name: Deploy static site to GitHub Pages

on:
  push:
    branches: [ main ]   # Change to your default branch if not 'main'

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    # Optional: Set up Node.js if you have a build step
    - name: Set up Node.js
      uses: actions/setup-node@v4
      with:
        node-version: 20

    # Optional: Install dependencies and build (uncomment if you use a build tool)
    # - name: Install dependencies
    #   run: npm ci

    # - name: Build
    #   run: npm run build

    # Deploy to GitHub Pages
    - name: Deploy to GitHub Pages
      uses: peaceiris/actions-gh-pages@v4
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        # If you have a build output folder like 'dist' or 'build', set it here:
        # publish_dir: ./dist
        # For pure static files in root, use '.'
        publish_dir: .
